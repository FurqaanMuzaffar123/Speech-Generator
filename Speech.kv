MainLayout:
    
<MainLayout>:
    orientation: 'vertical'
    Label:
        size_hint: (1,.5)
        text: 'Speech Generator'
        font_size: 50
    AnchorLayout:
        size_hint: (1,1)
        anchor_x: 'center'
        anchor_y: 'center'
        BoxLayout:
            orientation: 'vertical'
            size_hint: (.5,.5)  
            Label:
                id:information
                text: 'Enter your topic.'  
                font_size: 25
            TextInput:
                id: topic
                hint_text: "Enter your topic"
                background_color: 0, 0, 0, 0  # Fully transparent to hide the default
                foreground_color: (0.5,0.5,0.5,1)
                multiline: False
                on_text_validate: root.on_validate()
                       
    BoxLayout:
        size_hint: (1,1.5)
        orientation: 'horizontal'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Button:
                size_hint: (.25,.25)
                text: "Copy"
                on_press: root.copy()
                id:copy_b
                disabled:True
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            Label:
                id:speech
                text: "Your long paragraph goes here..."
                size_hint_y: None
                height: self.texture_size[1]
                text_size: self.width, None
                halign: 'left'
                valign: 'top'
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'
            BoxLayout:
                orientation: 'vertical'
                Label:
                    text:str(int(words.value)) + " words"
                
                Slider:
                    id:words
                    min:10
                    max:500
                    value:300
                
            

